<!ELEMENT nffgs (nffg+)>

<!ELEMENT nffg (node,node,node*,link+,policy*)>
	<!ATTLIST nffg
		 name  ID 		#REQUIRED
		 update_time	CDATA #REQUIRED
	>
<!ELEMENT node EMPTY>
<!ATTLIST node
	name 			ID 		#REQUIRED
	functional_type		(FW|DPI|NAT|SPAM|CACHE|VPN|WEB_SERVER|WEB_CLIENT|MAIL_SERVER|MAIL_CLIENT)	#REQUIRED	
	
>

<!ELEMENT link EMPTY>
<!ATTLIST link
	name			ID		#REQUIRED
	src					IDREF	#REQUIRED
	dst					IDREF	#REQUIRED
>	

<!ELEMENT policy (traversal?,verification?)>
<!ATTLIST policy
		name 		ID							#REQUIRED
		src			IDREF						#REQUIRED
		dst			IDREF						#REQUIRED
		positivity	(true|false)				#REQUIRED

>

<!ELEMENT verification EMPTY>
<!ATTLIST verification
	
		satisfied			(true|false)				#REQUIRED
		message				CDATA						#REQUIRED
		verification_time	CDATA						#REQUIRED
>

<!ELEMENT traversal  (functionality+)>




<!ELEMENT functionality EMPTY>
<!ATTLIST functionality
		name	(FW|DPI|NAT|SPAM|CACHE|VPN|WEB_SERVER|WEB_CLIENT|MAIL_SERVER|MAIL_CLIENT)	#REQUIRED
>





